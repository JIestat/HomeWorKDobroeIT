

public class Animal {
    private int age;
    private String name;


    Animal(){
    }
    
    Animal(int age, String name){
        this.age = age;
        this.name = name;
    }

    public int getAge() {
        return age;
    }

    public void setAge(int age) {
        this.age = age;
    }

    public String getName() {
        return name;
    }

    public void setName(String name) {
        this.name = name;
    }

    @Override
    public boolean equals(Object obj) {
        if (obj == null)
            return false;
        // проверка на случай, если сравнение с самим собой
        if (obj == this)
            return true;
        if (obj.getClass() == this.getClass()) {
            Animal animal = (Animal) obj;
            if (animal.name.equals(this.name) && animal.age == this.age)
                return true;
        }
        return false;
    }
    public void voice(){};

    public void dyingVoice(){
        System.out.println("животное умерает!");
    }


    @Override
    public String toString() {
        return "Животинка класса: "+ getClass()+", Возраст:"+getAge()+", Имя:"+getName();
    }
}
